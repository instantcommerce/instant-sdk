{
  "extends": "@sindresorhus/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "module": "ESNext",
    "target": "es2019",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "node_modules"]
}
