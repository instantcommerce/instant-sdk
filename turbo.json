      ]
    },
    "instant-cli#dev": {
      "dependsOn": [
        "@instantcommerce/postcss-plugin-sdk#build",
        "@instantcommerce/vite-plugin-sdk#build",
        "@instantcommerce/sdk-preview#build",
        "@instantcommerce/sdk#build"
      ]
    }
  }
}
